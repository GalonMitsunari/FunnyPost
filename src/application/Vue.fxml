<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
    <ListView fx:id="postListView" prefHeight="200" />
    <TextField fx:id="updatePostIdField" promptText="ID du post" />
    <TextField fx:id="updatePostTitleField" promptText="Nouveau titre" />
    <TextField fx:id="updatePostBodyField" promptText="Nouveau corps" />
    <Button onAction="#updatePost" text="Modifier" />
    <TextField fx:id="postIdField" promptText="ID du post à supprimer" />
    <Button onAction="#deletePost" text="Supprimer Post" />
    <Button onAction="#initPosts" text="Init" />
    <Button onAction="#resetDatabase" text="Réinitialiser la base" />    
</VBox>
